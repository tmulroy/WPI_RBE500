<launch>
  <arg name="model" default="$(find pa1_scara)/urdf/scara.urdf.xacro"/>
  <arg name="rvizconfig" default="$(find urdf_tutorial)/rviz/urdf.rviz" />

  <include file="$(find pa1_scara)/launch/gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />

  <rosparam command="load"
            file="$(find pa1_scara)/config/joints.yaml"
            ns="scara_joint_state_controller" />

  <node name="scara_controller_spawner" pkg="controller_manager" type="spawner"
    args="scara_joint_state_controller
          --shutdown-timeout 3"/>
</launch>
