<?xml version="1.0"?>
<robot name="scara">
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.025" radius="1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.025" radius="1"/>
      </geometry>
    </collision>
  </link>
  <link name="L1">
    <visual>
      <geometry>
        <cylinder length="1" radius="0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.025"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="1" radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <link name="L2">
    <visual>
      <geometry>
        <cylinder length="1" radius="0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 1.025"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="1" radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_to_L1" type="revolute">
    <parent link="base_link"/>
    <child link="L1"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0.025"/>
  </joint>

  <joint name="L1_to_L2" type="revolute">
    <parent link="L1"/>
    <child link="L1"/>
    <axis xyz="1 0 0"/>
    <origin rpy="1.5707 0 0" xyz="0 0 1.025"/>
  </joint>
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>
</robot>
